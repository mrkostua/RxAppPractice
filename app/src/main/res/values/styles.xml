<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TaskNameStyle" parent="android:Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorTaskName</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/colorWhite</item>
    </style>

    <style name="TaskDescriptionBodyStyle" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTaskBodyText</item>
        <item name="android:shadowColor">@color/colorWhite</item>
        <item name="android:background">@drawable/rectangle_borders</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TasksTimeDateStyle" parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/timeDateColor</item>
    </style>

    <style name="TaskDeadlineTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/deadlineTextColor</item>
    </style>

    <style name="MainButtonsStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AddTaskNameStyle" parent="android:Widget.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:editTextColor">@color/colorTaskName</item>
        <item name="android:textStyle">bold</item>
        <item name="android:hint">Task name</item>
        <item name="android:textColorHint">@color/colorTaskName</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@null
        </item> <!--result in using textColor as cursor color-->

    </style>

    <style name="AddTaskDescriptionBodyStyle" parent="android:Widget.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:hint">task description :\n1.\n2.\n3.</item>
        <item name="android:editTextColor">@color/colorTaskBodyText</item>
        <item name="android:textColorHint">@color/colorTaskBodyText</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textCursorDrawable">@null
        </item> <!--result in using textColor as cursor color-->
    </style>

    <style name="AddTaskTimeDateButtonStyle" parent="android:Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>

</resources>
