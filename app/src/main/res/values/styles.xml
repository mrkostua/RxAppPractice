<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TaskNameStyle" parent="android:Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorTaskName</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/colorWhite</item>
    </style>

    <style name="TaskDescriptionBodyStyle" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTaskBodyText</item>
        <item name="android:shadowColor">@color/colorWhite</item>
        <item name="android:background">@drawable/rectangle_borders</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TasksTimeDateStyle" parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/timeDateColor</item>
    </style>

    <style name="TaskDeadlineTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/deadlineTextColor</item>
    </style>

    <style name="MainButtonsStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
