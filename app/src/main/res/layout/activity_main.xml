<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#481f1f"
    tools:context=".displayMain.MainActivity">

    <Button
        android:id="@+id/bLetsStart"
        android:layout_width="180dp"
        android:layout_height="165dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="bShowActivityTasks"
        android:text="Lets start"
        app:layout_constraintEnd_toStartOf="@+id/bDeleteTasks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bDeleteTasks"
        android:layout_width="180dp"
        android:layout_height="165dp"
        android:onClick="bDeleteTasks"
        android:text="REMOVE TASKS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bLetsStart"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pbMainActivity"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>